<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_layout"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:orientation="vertical"
    tools:context=".view.UserRegistration">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:weightSum="4"
           android:orientation="vertical"
           android:gravity="center|top">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:background="@drawable/user_registration"
               android:orientation="vertical"
               android:weightSum="3"
               android:layout_weight="1.4">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:gravity="center|left"
                   android:layout_weight="1">

                   <ImageView
                       android:id="@+id/back_img"
                       android:layout_width="37dp"
                       android:layout_height="37dp"
                       android:layout_marginLeft="25dp"
                       android:src="@drawable/white_back"
                       />
               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:orientation="horizontal"
                   android:weightSum="3"
                   android:layout_weight="2">
                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1.3"/>
                   <ImageView
                       android:layout_width="180dp"
                       android:layout_height="30dp"
                       android:background="@drawable/logo"/>


               </LinearLayout>


           </LinearLayout>


       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:weightSum="4"
           android:orientation="vertical"
           android:gravity="center|bottom">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="3"
               android:weightSum="5.0"
               android:orientation="vertical">

               <androidx.cardview.widget.CardView
                   android:id="@+id/cardView"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:cardCornerRadius="35dp"
                   app:cardElevation="4dp"

                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="vertical"
                       android:weightSum="5">

                       //0.2
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:layout_weight="0.2"/>

                       //0.4
                       <com.tool.customfonts.MyTextView_SF_Pro_Display_Bold
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:layout_marginLeft="25dp"
                           android:text="@string/create_account"
                           android:textSize="22sp"
                           android:textColor="@color/text_color_registration"
                           android:layout_weight="0.4"/>

                       //0.1
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:layout_weight="0.1"/>

                       //0.55
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:weightSum="5"
                           android:orientation="horizontal"
                           android:layout_marginLeft="25dp"
                           android:layout_weight="0.55">

                           <ImageView
                               android:layout_width="0dp"
                               android:layout_weight="0.8"
                               android:layout_height="match_parent"
                               android:background="@drawable/name_icon"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:layout_weight="0.2"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:orientation="vertical"
                               android:weightSum="5"
                               android:layout_weight="4">

                               <com.tool.customfonts.MyTextView_SF_Pro_Display_Bold
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:text="@string/name"
                                   android:textColor="@color/text_color_registration"
                                   android:layout_weight="1.6"/>

                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:layout_weight="0.4"/>

                               <EditText
                                   android:id="@+id/nameEdt"
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:layout_weight="2.9"
                                   android:ems="10"
                                   android:textCursorDrawable="@null"
                                   android:textColor="#A3A3A4"
                                   android:paddingLeft="5dp"
                                   android:background="@null">

                                   <requestFocus />
                               </EditText>

                               <View
                                   android:id="@+id/UnderLine1"
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:layout_weight="0.1"
                                   android:layout_marginTop="2dp"
                                   android:background="@color/underline_color" />

                           </LinearLayout>


                       </LinearLayout>

                       //0.25
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:layout_weight="0.25"/>

                       //0.55
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:weightSum="5"
                           android:orientation="horizontal"
                           android:layout_marginLeft="25dp"
                           android:layout_weight="0.55">

                           <ImageView
                               android:layout_width="0dp"
                               android:layout_weight="0.8"
                               android:layout_height="match_parent"
                               android:background="@drawable/email"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:layout_weight="0.2"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:orientation="vertical"
                               android:weightSum="5"
                               android:layout_weight="4">

                               <com.tool.customfonts.MyTextView_SF_Pro_Display_Bold
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:text="@string/email"
                                   android:textColor="@color/text_color_registration"
                                   android:layout_weight="1.6"/>

                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:layout_weight="0.4"/>

                               <EditText
                                   android:id="@+id/emailEdt"
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:layout_weight="2.9"
                                   android:ems="10"
                                   android:textCursorDrawable="@null"
                                   android:textColor="#A3A3A4"
                                   android:paddingLeft="5dp"
                                   android:background="@null">

                                   <requestFocus />
                               </EditText>

                               <View
                                   android:id="@+id/UnderLine2"
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:layout_weight="0.1"
                                   android:layout_marginTop="2dp"
                                   android:background="@color/underline_color" />

                           </LinearLayout>


                       </LinearLayout>


                       //0.25
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:layout_weight="0.25"/>

                       //0.55
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:weightSum="5"
                           android:orientation="horizontal"
                           android:layout_marginLeft="25dp"
                           android:layout_weight="0.55">

                           <ImageView
                               android:layout_width="0dp"
                               android:layout_weight="0.8"
                               android:layout_height="match_parent"
                               android:background="@drawable/password"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:layout_weight="0.2"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:orientation="vertical"
                               android:weightSum="5"
                               android:layout_weight="4">

                               <com.tool.customfonts.MyTextView_SF_Pro_Display_Bold
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:text="@string/password"
                                   android:textColor="@color/text_color_registration"
                                   android:layout_weight="1.6"/>

                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:layout_weight="0.4"/>

                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:layout_weight="2.9"
                                   android:orientation="horizontal">

                                   <EditText
                                       android:id="@+id/passwordEdt"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:layout_weight="2.5"
                                       android:ems="10"
                                       android:inputType="textPassword"
                                       android:paddingRight="20dp"
                                       android:textCursorDrawable="@null"
                                       android:textColor="#A3A3A4"
                                       android:paddingLeft="5dp"
                                       android:background="@null">

                                       <requestFocus />
                                   </EditText>

                                   <ImageButton
                                       android:id="@+id/showpassword"
                                       android:layout_weight="0.5"
                                       android:layout_marginRight="10dp"
                                       style="?android:buttonBarButtonStyle"
                                       android:onClick="ShowHidePass"
                                       android:src="@drawable/ic_hide_password"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content" />

                               </LinearLayout>

                               <View
                                   android:id="@+id/UnderLine3"
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:layout_weight="0.1"
                                   android:layout_marginTop="2dp"
                                   android:background="@color/underline_color" />

                           </LinearLayout>


                       </LinearLayout>

                       //0.25
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:layout_weight="0.25"/>

                       //0.55
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:weightSum="5"
                           android:orientation="horizontal"
                           android:layout_marginLeft="25dp"
                           android:layout_weight="0.55">

                           <ImageView
                               android:layout_width="0dp"
                               android:layout_weight="0.8"
                               android:layout_height="match_parent"
                               android:background="@drawable/location"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:layout_weight="0.2"/>
                           <LinearLayout
                               android:layout_width="0dp"
                               android:layout_height="match_parent"
                               android:orientation="vertical"
                               android:weightSum="5"
                               android:layout_weight="4">

                               <com.tool.customfonts.MyTextView_SF_Pro_Display_Bold
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:text="@string/location"
                                   android:textColor="@color/text_color_registration"
                                   android:layout_weight="1.6"/>

                               <LinearLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:layout_weight="0.4"/>

                               <EditText
                                   android:id="@+id/locationEdt"
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:layout_weight="2.9"
                                   android:ems="10"
                                   android:textCursorDrawable="@null"
                                   android:textColor="#A3A3A4"
                                   android:paddingLeft="5dp"
                                   android:background="@null">

                                   <requestFocus />
                               </EditText>

                               <View
                                   android:id="@+id/UnderLine4"
                                   android:layout_width="match_parent"
                                   android:layout_height="0dp"
                                   android:layout_weight="0.1"
                                   android:layout_marginTop="2dp"
                                   android:background="@color/underline_color" />

                           </LinearLayout>


                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:layout_weight="0.4"/>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_weight="0.55"
                           android:layout_marginLeft="25dp"
                           android:layout_marginRight="25dp"
                           android:layout_height="0dp">

                           <Button
                               android:id="@+id/create_account_btn"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:background="@drawable/button_get_start"
                               android:textColor="#ffffff"
                               android:text="@string/create_account"
                               />
                       </LinearLayout>

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:layout_weight="0.25"/>





                   </LinearLayout>

               </androidx.cardview.widget.CardView>

           </LinearLayout>



       </LinearLayout>

   </FrameLayout>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/user_registration"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1.4">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/logo"/>


    </LinearLayout>
    -->

</LinearLayout>